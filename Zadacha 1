#include <stdio.h>

int main() {
    int red_balls[10];
    for (int i = 0; i < 10; i++) {
        red_balls[i] = i + 1;
    }
    int size = sizeof(red_balls) / sizeof(red_balls[0]);
    printf("В коробке red_balls помещается %d шариков.\n", size);
    printf("Содержимое коробки: ");
    for (int i = 0; i < size; i++) {
        printf("%d ", red_balls[i]);
    }
    printf("\n");
    return 0;
}
